---
import { Image } from "astro:assets";
import LogoOptavaValis from "../assets/img/logo.png";
---

<div class="bg-light text-dark font-semibold mt-10 py-16">
  <div class="container mx-auto px-4">
    <div class="flex items-center gap-10 justify-center">
      <div class="text-center">
        
        <a href="/">
          <Image
            src={LogoOptavaValis}
            width={200}
            height={200}
            format="webp"
            alt="Logo thérapeutes d'Optevoz"
            class="mx-auto -mt-4"
          />
        </a>
      </div>

      <div class="md:ml-24 text-lg text-center">
        <p class="text-xl">Cabinet de thérapeutes Optava Vallis<br />
          314 rue Philippe Tassier<br />
          38460 Optevoz
        </p>
        <p>Site réalisé par Fabien Grignoux</p>
        <p><a class="underline" href="/mentions-legales">Mentions légales</a></p>
      </div>
    </div>
  </div>
</div>

<style scoped>
  div {
    font-family: "Source Sans 3" !important;
    font-optical-sizing: auto !important;
    font-style: normal !important;
  }

</style>