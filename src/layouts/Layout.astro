---
import "../assets/styles/global.scss";
import NavBar from "../components/vue/NavBar.vue";
import menus from "../content/params/menu.json";
import generalInfos from "../content/params/general.json"
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const fonts ="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" ;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href={fonts} rel="preload" as="style" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- {ogImage && <meta
      property="”og:image”"
      content=`https://tangobucolico.com${ogImage}`
    />
    } -->

    <link
      rel="stylesheet"
      href={fonts}
      media="print"
      onload="this.media='all'"
    />

    
    <title>{title}</title>
  </head>
  <body class="bg-light text-dark">

    <NavBar client:load siteUrl="/" menus={menus} generalInfos={generalInfos} />
    <slot />

    <Footer />
  </body>
</html>

<style is:global>
  .title-site {
    font-family: "Oswald",system-ui !important;
	  font-optical-sizing: auto;
    text-transform: uppercase;
    font-weight:normal;
    font-size:1.6em;
  }

  .subtitle-site {
    font-family: "Source Sans 3", system-ui !important;
	font-optical-sizing: auto;
    font-weight:normal;
  }

  .menu-site li{
    font-family: "Source Sans 3", system-ui !important;
    text-transform: uppercase;
    font-weight:normal;
    font-size:1.2em;
  }

  body {
	font-family: "Source Sans 3", system-ui !important;
	font-optical-sizing: auto !important;
    font-family: "Average Sans" !important;
    color: rgb(69, 69, 69) !important;
    font-size: 1.2em !important;
  }

  h1,
  .title {
    font-family: "Oswald",system-ui !important;
  }

  h2 {
    font-family: "Oswald",system-ui !important;
    margin-bottom: 0.1em !important;
    line-height: 1em !important;
  }

  h3 {
    font-family: "Oswald",system-ui !important;
    margin-top: 0.5em v;
    line-height: 1em !important;
  }
</style>
